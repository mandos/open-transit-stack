{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug @mandos-dev/ippo-cli with Nx",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "@mandos-dev/ippo-cli"],
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/appscli/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    },
